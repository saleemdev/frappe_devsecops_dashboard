{
  "name": "frappe-devsecops-dashboard-frontend",
  "version": "1.0.0",
  "description": "DevSecOps Dashboard with ERPNext Project and Task Type integration",
  "main": "src/main.jsx",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/assets/frappe_devsecops_dashboard/frontend/",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run --spec 'cypress/e2e/**/*.cy.js'",
    "test:e2e:headed": "cypress run --spec 'cypress/e2e/**/*.cy.js' --headed",
    "test:dashboard": "cypress run --spec 'cypress/e2e/dashboard.cy.js'",
    "test:responsive": "cypress run --spec 'cypress/e2e/responsive.cy.js'",
    "test:accessibility": "cypress run --spec 'cypress/e2e/accessibility.cy.js'",
    "playwright:test": "playwright test",
    "playwright:test:headed": "playwright test --headed",
    "playwright:test:zenhub": "playwright test tests/e2e/zenhub-dashboard.spec.ts",
    "playwright:test:zenhub:headed": "playwright test tests/e2e/zenhub-dashboard.spec.ts --headed",
    "playwright:test:zenhub:chromium": "playwright test tests/e2e/zenhub-dashboard.spec.ts --project=chromium",
    "playwright:test:zenhub:firefox": "playwright test tests/e2e/zenhub-dashboard.spec.ts --project=firefox",
    "playwright:test:zenhub:webkit": "playwright test tests/e2e/zenhub-dashboard.spec.ts --project=webkit",
    "playwright:test:zenhub:mobile": "playwright test tests/e2e/zenhub-dashboard.spec.ts --project='Mobile Chrome'",
    "playwright:test:wiki": "playwright test tests/e2e/wiki.spec.ts",
    "playwright:test:wiki:headed": "playwright test tests/e2e/wiki.spec.ts --headed",
    "playwright:debug": "playwright test --debug",
    "playwright:ui": "playwright test --ui",
    "playwright:codegen": "playwright codegen"
  },
  "dependencies": {
    "@ant-design/icons": "^5.4.0",
    "@ant-design/plots": "^2.6.5",
    "@uiw/react-md-editor": "^4.0.11",
    "antd": "^5.21.0",
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "react": "^19.1.2",
    "react-dom": "^19.1.2",
    "react-quill-new": "^3.3.1",
    "sweetalert2": "^11.26.3",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "cypress": "^15.3.0",
    "cypress-axe": "^1.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "vite": "^5.3.0"
  }
}
